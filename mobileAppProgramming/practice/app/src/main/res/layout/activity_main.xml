<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" horizontal
    android:gravity="center"
    android:background="#ffff00"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="#ff0000"
        android:textSize="20dp"
        android:autoLink="web|email|phone"
        android:background="#ff00ff"
        android:maxLines="3"
        android:ellipsize="end"
        android:singleLine="true"
        android:ellipisize="start/middle"
        android:gravity="right|bottom"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" /> italic, normal

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 0
        android:text="Button1"
        android:backgroundTint="#0000ff"
        android:paddind="30dp"
        android:paddingBottom="50dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1" 여백
        android:visibility="invisible"/> gone

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:adjustViewBounds="true"
        android:background="#00ff00"
        android:shape="rectangle" oval,line,ring
        android:src="@drawable/test" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check1" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="radio1" />
    </RadioGroup>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="3"
        android:maxLines="3"
        android:inputType="phone" /> none,text,textMultiLine,textPassword,number,numberPassword,textEmailAddress,TextUri

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/testImage" />
        <Button
            android:layout_toRightOf="@id/testIamge" above,below,toLeftOf
            android:layout_alignBottom="@id/testIamge" /> Top,Left,Right,Baseline
            android:layout_alignParentTop="true" Right,Left,Bottom,
                           centerHorizontal,centerVertical,centerInParent
    </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="3"
        android:rowCount="3">
        <Button android:text="A"/>
        <Button android:text="A"/>
        <Button android:text="A"
            android:layout_row="1"
            android:lyaout_column="1"/>
        <Button android:text="A"
            android:layout_gravity="fill_horizontal"/> right
        <Button android:text="A"
            android:layout_columnSpan="2"
            android:layout_rowSpan="2"/>
    </GridLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>
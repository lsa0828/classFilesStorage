<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreference
        app:key="power"
        app:title="ON/OFF" />

    <PreferenceCategory
        app:key="notification"
        app:title="기록 버튼 설정" >
         <ListPreference
            app:key="add_bg_color"
            app:title="배경색 선택"
            android:entries="@array/my_color"
            android:entryValues="@array/my_color_values" />
        <ListPreference
            app:key="add_tx_color"
            app:title="글자색 선택"
            android:entries="@array/my_color"
            android:entryValues="@array/my_color_values" />
    </PreferenceCategory>
    <PreferenceCategory
        app:key="etc"
        app:title="검색창 설정" >
        <ListPreference
            app:key="more_bg_color"
            app:title="배경색 선택"
            android:entries="@array/my_color"
            android:entryValues="@array/my_color_values" />
        <ListPreference
            app:key="more_tx_color"
            app:title="글자색 선택"
            android:entries="@array/my_color"
            android:entryValues="@array/my_color_values" />
    </PreferenceCategory>
</PreferenceScreen>